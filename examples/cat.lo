include "./lib/cli.lo";
include "./lib/args.lo";
include "./lib/fs.lo";

fn main() {
    let args = args::load();
    defer args.free();

    if args.argc != 2 {
        wasi::proc_exit(1);
    };

    let file_path = args.get(1);

    let fd = fs::open(file_path) catch _ {
        wasi::proc_exit(1);
        unreachable; // TODO: autoinsert unreachable
    };
    defer let _ = fs::close(fd);

    let err = fs::pipe(fd, wasi::FD_STDOUT, 256);
    if err {
        wasi::proc_exit(1);
    };
};
