(mem m1 :min 1000)
(export mem m1 :as memory)

(export parse :as parse)
(export skip_space :as skip_space)
(export char_at :as char_at)

(struct StringSlice
    (data i32)
    (size i32)
)

(fn StringSlice/char_at ((self StringSlice) (index i32)) (i32) (
    (i32.load8_u (i32.add (get self :data) index))
))

