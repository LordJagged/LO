{
    "name": "lo",
    "displayName": "LO",
    "description": "LO language support",
    "author": "glebbash",
    "license": "MIT",
    "version": "0.0.189",
    "publisher": "glebbash",
    "engines": {
        "vscode": "^1.88.0"
    },
    "repository": "https://github.com/glebbash/lo",
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "lo",
                "aliases": [
                    "lo"
                ],
                "extensions": [
                    ".lo"
                ],
                "configuration": "./syntaxes/lo.config.json",
                "icon": {
                    "light": "./icons/lo.svg",
                    "dark": "./icons/lo.svg"
                }
            }
        ],
        "grammars": [
            {
                "language": "lo",
                "scopeName": "source.lo",
                "path": "./syntaxes/lo.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "lo.runFile",
                "title": "LO: Run current file"
            }
        ],
        "configuration": {
            "lo.useNodeWasi": {
                "type": "boolean",
                "default": false,
                "description": "Whether to use `node:wasi` runtime instead of `@vscode/wasm-wasi`."
            }
        }
    },
    "extensionDependencies": [
        "ms-vscode.wasm-wasi-core"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts",
        "package": "npm version patch && vsce package -o lo.vsix"
    },
    "devDependencies": {
        "@types/node": "18.x",
        "@types/vscode": "^1.88.0",
        "@typescript-eslint/eslint-plugin": "^7.4.0",
        "@typescript-eslint/parser": "^7.4.0",
        "@vscode/vsce": "^2.25.0",
        "eslint": "^8.57.0",
        "typescript": "^5.3.3",
        "vsce": "^2.15.0"
    },
    "dependencies": {
        "@vscode/wasm-wasi": "^0.11.0-next.0"
    }
}
